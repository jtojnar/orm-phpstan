{
	"name": "nextras/orm-phpstan",
	"description": "PhpStan extension for Nextras Orm",
	"type": "phpstan-extension",
	"license": [
		"MIT"
	],
	"require": {
		"php": "~7.1",
		"phpstan/phpstan": "^0.12.29"
	},
	"require-dev": {
		"nette/tester": "~2.0",
		"nextras/orm": "~4.0@dev",
		"nextras/dbal": "~4.0@dev"
	},
	"autoload": {
		"psr-4": {
			"Nextras\\OrmPhpStan\\": "src/"
		}
	},
	"prefer-stable": true,
	"autoload-dev": {
		"classmap": [
			"tests/"
		]
	},
	"extra": {
		"phpstan": {
			"includes": [
				"extension.neon"
			]
		}
	},
	"scripts": {
		"tests": "tester ./tests/test.php && phpstan analyze"
	}
}
