{
	"name": "nextras/orm-phpstan",
	"description": "PHPStan extension for Nextras Orm",
	"type": "phpstan-extension",
	"license": [
		"MIT"
	],
	"require": {
		"php": "~7.1",
		"phpstan/phpstan": "^0.12.29",
		"nextras/orm": "~4.0"
	},
	"require-dev": {
		"nette/tester": "^2.3.1"
	},
	"autoload": {
		"psr-4": {
			"Nextras\\OrmPhpStan\\": "src/"
		}
	},
	"prefer-stable": true,
	"autoload-dev": {
		"classmap": [
			"tests/"
		]
	},
	"extra": {
		"phpstan": {
			"includes": [
				"extension.neon"
			]
		}
	},
	"scripts": {
		"tests": "tester ./tests/test.php && phpstan analyze"
	}
}
